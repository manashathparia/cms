<%- include('header'); -%>
<div
    style="width: 70%; margin: auto; margin-top: 25px; box-shadow: 0 0 27px 0 rgba(214, 231, 233, 0.35); border: 1px solid #dddddd; padding: 30px">
    <div>
        <h2><%= post.title %></h2>
        <p><%= post.updatedAt %></p>
    </div>
    <div>
        <img style="width: 100%; border-radius: 2px" src=<%= post.featuredImage.url %>>
    </div>
    <div>
        <p>
            <%-post.body %>
        </p>
    </div>
</div>
<%- include('footer'); -%>